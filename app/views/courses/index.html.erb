<h1>Listing courses</h1>

<table class="table table-striped table-bordered table-condensed table-responsive table-hover"> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tutor</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Venue</th>      
      <th>Cost</th>
      <th>Tag</th>
      <th>Course Banner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.tutor %></td>
        <td><%= course.start_date %>
        <% if course.days == false || course.end_date != nil %>
        	to <%= course.end_date %>
        <% end %>
        
        </td>      
        <td><%= course.time %></td>
        <td><%= course.location %></td>
        <td><%= course.venue %></td>
        
        <% if course.price == nil || course.cost == false || course.price == 0.0 %>
        	<td> Free </td>
        <% else %>
        	<td><%= course.currency %><%= course.price %></td>
        <% end %>
        
        <td><%= course.tag %></td>
        
        <td><%= image_tag course.avatar.medium %></td>
        
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="contextual">
	<%= link_to(new_course_path, class: "btn") do %>
    	New Course
	<% end %>
</div>